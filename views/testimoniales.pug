extends ./layout/index

block contenido
    main.container.mt-5
        h1.text-center= pagina
        
        blockquote.text-center Lee sobre nuestros clientes y suss experiencias
        
        include ./layout/testimonialCard

        .row
            h2.d-block.w-100.text-center Agrega tu testimonial

            .row.justify-content-center.col      
                .col-md-8 
                    
                    if(errores)
                        each error in errores
                            .alert.col.alert-danger.text-center= error.mensaje
                            

                    form(action="/testimoniales" method='POST')
                        .form-group    
                            label(for="nombre") Nombre: 
                            input(type="text", placeholder='Tu nombre', name="nombre", class="form-control", value=nombre) 
                        .form-group    
                            label(for="correo") Email: 
                            input(type="text", placeholder='Tu correo electr√≥nico', name="correo", class="form-control", value=correo) 
                        .form-group    
                            label(for="mensaje") Mensaje: 
                            textarea#mensaje(name="mensaje", placeholder='Tu mensaje', cols="30", rows="3", class="form-control", value=mensaje) 

                        input.btn.btn-success.bnt-block.w-100(type="submit")

        
            
            